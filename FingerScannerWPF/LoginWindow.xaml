<Window x:Class="FingerScannerWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="احراز هویت" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Username" Grid.Row="0" FontSize="14" Margin="0,10,0,2"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Height="30" FontSize="14" />

        <TextBlock Text="Password" Grid.Row="2" FontSize="14" Margin="0,20,0,2"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Height="30" FontSize="14"/>

        <Button Content="ورود" Width="200" Height="36" 
                HorizontalAlignment="Center" Margin="0,60,0,0"
                VerticalAlignment="Bottom" Background="#B8DBD9"
                Click="LoginButton_Click"
                Grid.Row="4"/>
    </Grid>
</Window>