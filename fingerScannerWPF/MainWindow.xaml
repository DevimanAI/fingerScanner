<Window x:Class="fingerScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Finger Scanner" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f4f4f4">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Title Bar -->
        <Border Grid.Row="0" Background="#3498db" Padding="10">
            <TextBlock Text="Finger Scanner Application" Foreground="White" FontSize="20" FontWeight="Bold"/>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Scanner and Actions -->
            <Border Grid.Column="0" Padding="20" Background="White" CornerRadius="10" Margin="0,0,10,0" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <!-- Scanner Preview/Placeholder -->
                    <Border Height="200" Background="#eee" CornerRadius="5" Margin="0,0,0,20">
                        <TextBlock Text="Scanner Preview" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#777"/>
                    </Border>

                    <!-- Actions -->
                    <Button Content="Start Scan" Background="#2ecc71" Foreground="White" Padding="10" Margin="0,0,0,10" BorderThickness="0" CornerRadius="5"/>
                    <Button Content="Stop Scan" Background="#e74c3c" Foreground="White" Padding="10" Margin="0,0,0,10" BorderThickness="0" CornerRadius="5"/>
                    <Button Content="Clear" Background="#f39c12" Foreground="White" Padding="10" BorderThickness="0" CornerRadius="5"/>
                </StackPanel>
            </Border>

            <!-- Right Panel: Student List and Management -->
            <Border Grid.Column="1" Padding="20" Background="White" CornerRadius="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Students" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <!-- Student List (Placeholder) -->
                    <ListBox Height="300" BorderThickness="1" BorderBrush="#ccc">
                        <ListBoxItem Content="Student 1"/>
                        <ListBoxItem Content="Student 2"/>
                        <ListBoxItem Content="Student 3"/>
                    </ListBox>

                    <!-- Add Student Button -->
                    <Button Content="Add Student" Background="#3498db" Foreground="White" Padding="10" Margin="0,10,0,0" BorderThickness="0" CornerRadius="5"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>